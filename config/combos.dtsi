/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap.

/* Horizontal combos - left hand */
ZMK_COMBO(tab,    &kp TAB,           LT4 LT3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(esc,    &kp ESC,           LT3 LT2,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(mouse,  &smart_mouse,      LT3 LT1,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(shift,  &kp LSHFT,         LM4 LM3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ldr,    &leader,           LM3 LM2,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LCTRL),    KEYS_R)
ZMK_COMBO(ldrsh,  &leader_sft,       LM3 LM2 LM1,     DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LC(LALT)), KEYS_R)
ZMK_COMBO(dskl,   &kp LG(LC(LEFT)),  LB4 LB3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,   &copy_cut,         LB2 LB1,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste,  &kp LC(V),         LB1 LB0,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(bspc,   &kp BSPC,          RT3 RT4,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(pgup,   &kp PG_UP,         RT1 RT2,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(pgdn,   &kp PG_DN,         RT2 RT3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,    &kp DEL,           RT0 RT1,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(ent,    &kp RET,           RM3 RM4,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(wrdr,   &kp LC(RIGHT),     RM2 RM3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(wrdl,   &kp LC(LEFT),      RM1 RM2,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ins,    &kp INS,           RM0 RM1,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(lbrc,   &kp LBKT,          RB1 RB2,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,   &kp RBKT,          RB2 RB3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(dskr,   &kp LG(LC(RIGHT)), RB4 RB3,         DEF NN, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(excl,   &kp EXCL,          LT4 LM4,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(at,     &kp AT,            LT3 LM3,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(hash,   &kp HASH,          LT2 LM2,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(dllr,   &kp DLLR,          LT1 LM1,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(prcnt,  &kp PRCNT,         LT0 LM0,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(grave,  &kp GRAVE,         LM4 LB4,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(equal,  &kp EQUAL,         LM3 LB3,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(bslh,   &kp BSLH,          LM2 LB2,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(pipe,   &kp PIPE,          LM1 LB1,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(minus,  &kp MINUS,         LM0 LB0,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(caret,  &kp CARET,         RT0 RM0,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(amps,   &kp AMPS,          RT1 RM1,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(star,   &kp STAR,          RT2 RM2,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(swp1,   &swapper1,         RT3 RM3,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(swp2,   &swapper2,         RT4 RM4,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(under,  &kp UNDER,         RM0 RB0,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(lpar,   &lpar_lt,          RM1 RB1,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(fslh,   &kp FSLH,          RM2 RB2,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(rpar,   &rpar_gt,          RM3 RB3,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Diagonal combos - right hand */
ZMK_COMBO(home,   &kp HOME,          RT2 RM1,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(end,    &kp END,           RT2 RM3,          DEF NN, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Horizontal combos - cross hand */
ZMK_COMBO(caps,   &kp CAPS,          LM1 RM1,          DEF,    COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

