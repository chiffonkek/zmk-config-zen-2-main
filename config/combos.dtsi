ZMK_COMBO(CF07,      &kp F7,            LH1 LT4,     DEF       , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(CF08,      &kp F8,            LH1 LT3,     DEF       , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(CF09,      &kp F9,            LH1 LT2,     DEF       , COMBO_TERM_FAST, COMBO_IDLE_FAST)
